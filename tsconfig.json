{
    "compilerOptions": {
        "sourceMap": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "stripInternal": false,
        "target": "esnext",
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "esnext",
        ],
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "bazelOptions": {
        "suppressTsconfigOverrideWarnings": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
