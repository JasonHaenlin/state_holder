{
    "compilerOptions": {
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "stripInternal": false,
        "target": "ESNext",
        "rootDir": "src",
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "ESNext",
            "DOM"
        ],
        "types": [
            "jest",
            "node"
        ]
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "bazelOptions": {
        "suppressTsconfigOverrideWarnings": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}
